---
import '../styles/global.css';
import { ClientRouter } from "astro:transitions";
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/Disbelto Favicon.svg" />
		<meta name="generator" content="{Astro.generator}" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<main class="relative h-screen bg-no-repeat bg-cover bg-[center_10%] sm:bg-[url('/disbelto_buho.png')]">
			<div class="absolute inset-0 text-white px-6 py-12 sm:px-60 sm:py-20">
			  	<slot />
			</div>
		</main>
	</body>
</html>
